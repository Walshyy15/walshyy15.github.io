{
  "name": "fluxforge",
  "private": true,
  "version": "0.1.0",
  "description": "FluxForge – next‑generation, browser‑first falling‑sand simulator",
  "license": "MIT",
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm -r --filter ./packages/* run build && pnpm --filter @fluxforge/web build",
    "dev": "pnpm --filter @fluxforge/web dev",
    "lint": "eslint . --ext .ts,.tsx,.js,.cjs,.mjs",
    "format": "prettier --write .",
    "typecheck": "tsc -b --pretty",
    "test": "vitest run",
    "test:ui": "vitest",
    "e2e": "playwright test",
    "docs": "typedoc",
    "ci": "pnpm -w run typecheck && pnpm -w run lint && pnpm -w run build && pnpm -w run test"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typedoc": "^0.28.9",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "vitest": "^1.6.0"
  }
}
