{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["vite/client", "vitest"],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "useDefineForClassFields": true,
    "noImplicitOverride": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@fluxforge/engine": ["packages/engine/src/index.ts"],
      "@fluxforge/render": ["packages/render/src/index.ts"],
      "@fluxforge/worker": ["packages/worker/src/index.ts"],
      "@fluxforge/ui": ["packages/ui/src/index.ts"]
    }
  }
}

